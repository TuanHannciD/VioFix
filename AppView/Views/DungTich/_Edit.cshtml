@model AppData.Models.DungTich

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Chỉnh sửa dung tích</h5>
            <button type="button" class="close" data-dissmiss ="modal" asp-label="Close">
                <span arai-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="editForm" method="post" action="/DungTich/Edit">
                <div class="form-group">
                    <label for="Ten">Tên Dung Tích</label>
                    <input type="text" class="form-control" name="Ten" id="Ten" value="@Model.Ten" required/>
                </div>
                <input type="hidden" name="id" value="@Model.ID" />
                <input type="hidden" name="TrangThai" value="1"
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" form="editForm" class="btn btn-primary">Save changes</button>
        </div>
    </div>

</div>